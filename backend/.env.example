# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=persiraja_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# External API Keys
XENDIT_SECRET_KEY=your_xendit_secret_key
GEMINI_API_KEY=your_gemini_api_key
FACEBOOK_APP_ID=your_facebook_app_id

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@persiraja.com

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_EMAIL=admin@persiraja.com

# Admin Configuration
ADMIN_EMAIL=admin@persiraja.com
ADMIN_PASSWORD=admin123
ADMIN_API_KEY=your_super_secret_admin_api_key

# Security Configuration
SESSION_SECRET=your_session_secret_key
COOKIE_SECRET=your_cookie_secret

# CORS Configuration
FRONTEND_URL=http://localhost:8080
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000,http://localhost:5173

# Backup Configuration
BACKUP_DIR=./backups

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info